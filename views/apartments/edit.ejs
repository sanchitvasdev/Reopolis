<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Apartment</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/apartments/<%= apartment._id %>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title of the apartment</label>
                    <input class="form-control" type="text" name="apartment[title]" value="<%=apartment.title%>"
                        id="title" required>
                    <div class="valid-feedback">
                        Correctly filled!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price of the apartment</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">â‚¹</span>
                        <input class="form-control" type="text" name="apartment[price]" value="<%=apartment.price%>"
                            id="price" aria-label="price" aria-describedby="price-label" placeholder="0.00" required>
                        <div class="valid-feedback">
                            Correctly filled!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location of the apartment</label>
                    <input class="form-control" type="text" name="apartment[location]" value="<%=apartment.location%>"
                        id="location" required>
                    <div class="valid-feedback">
                        Correctly filled!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="apartment[description]" id="description"
                        required><%=apartment.description%></textarea>
                    <div class="valid-feedback">
                        Correctly filled!
                    </div>
                </div>
                <div class="mb-4">
                    <label for="image" class="form-label">Add more image(s)..</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>
                <div class="mb-3">
                    <% apartment.images.forEach(function(img, i) { %>
                        <img src="<%=img.url%>" class="img-thumbnail w-100 mb-3" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>" class="mb-3">Delete</label>
                        <% })%>
                </div>
                <div class="mb-3 d-flex justify-content-center">
                    <button class="btn shadow rounded" id="btnStyle">Update apartment</button>
                </div>
            </form>
            <a href="/apartments/<%= apartment._id %>" class="btn shadow rounded mb-5 mt-3" id="backBtn">&#8592; Back to
                Apartment</a>
        </div>
    </div>
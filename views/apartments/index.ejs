<% layout('layouts/boilerplate') %>
    <div class="d-flex justify-content-end mb-3">
        <h1 class="d-inline-block me-auto">All apartments</h1>
        <a href="/apartments/new" class="btn shadow rounded" id="addApart">Add an
            apartment</a>
    </div>
    <% if(apartments.length!=0){ %>
        <% for (let apartment of apartments){ %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(apartment.images.length){ %>
                            <img src=<%=apartment.images[0].url%> alt="" class="img-fluid">
                            <%}else{%>
                                <img src="https://res.cloudinary.com/dnuompa9x/image/upload/v1634135516/Reopolis/god02duj1uxirrnc6rds.jpg"
                                    alt="" class="img-fluid">
                                <%}%>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= apartment.title %>
                            </h5>
                            <p class="card-text">
                                <%= apartment.description %>
                            </p>
                            <p>
                                <a class="card-text text-muted" id="locationLink"
                                    href="<%=`https://www.google.com/maps/place/${apartment.location}`%>"
                                    target="_blank">
                                    ğŸ“Œ<%=apartment.location %>
                                </a>
                            </p>
                            <a class="btn shadow rounded" id="btnStyle" href="/apartments/<%= apartment._id %> ">View
                                <%= apartment.title %>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
                <% }else{ %>
                    <div class="text-center mt-5">
                        <img src="https://cdn-icons-png.flaticon.com/128/1178/1178428.png" alt="" style="height: 5em"
                            class="mb-3">
                        <h2>No apartment(s) available</h2>
                    </div>
                    <% } %>
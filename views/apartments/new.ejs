<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Apartment</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/apartments" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title of the apartment</label>
                    <input class="form-control" type="text" name="apartment[title]" id="title" required>
                    <div class="valid-feedback">
                        Correctly filled!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price of the apartment</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">â‚¹</span>
                        <input class="form-control" type="text" name="apartment[price]" id="price" aria-label="price"
                            aria-describedby="price-label" placeholder="0.00" required>
                        <div class="valid-feedback">
                            Correctly filled!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location of the apartment</label>
                    <input class="form-control" type="text" name="apartment[location]" id="location" required>
                    <div class="valid-feedback">
                        Correctly filled!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Describe the apartment</label>
                    <textarea class="form-control" type="text" name="apartment[description]" id="description"
                        required></textarea>
                    <div class="valid-feedback">
                        Correctly filled!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Choose image(s)..</label>
                    <input class="form-control" type="file" id="image" name="image" required multiple>
                </div>
                <div class="mb-3 d-flex justify-content-center">
                    <button class="btn shadow rounded" id="btnStyle">Add apartment</button>
                </div>
            </form>
        </div>
    </div>